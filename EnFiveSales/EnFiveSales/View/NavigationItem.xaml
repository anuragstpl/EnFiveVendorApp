<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	  x:Name="this"
      VerticalOptions="StartAndExpand"
      BackgroundColor="{DynamicResource Gray-200}"
      x:Class="EnFiveSales.View.NavigationItem">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Label Text="{Binding Text, Source={x:Reference this}}" Grid.Column="0" FontSize="15" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" />
    <Grid.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding Command, Source={x:Reference this}}" CommandParameter="{Binding CommandParameter, Source={x:Reference this}}" />
    </Grid.GestureRecognizers>
</Grid>